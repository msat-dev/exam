<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:layout="@android:layout/list_content"
    tools:context="com.example.android.rainuponarrival.DetailFragment"
    >

    <com.example.android.rainuponarrival.CustomTextView
        android:id="@+id/detail_location_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="36sp"
        tools:text="東京"
        />
    <ListView
        android:id="@+id/detail_rainfall_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_location_label"
        android:layout_above="@+id/go_map_button"
        android:layout_marginTop="30dp"
        />
